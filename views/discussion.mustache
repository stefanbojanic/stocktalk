<!doctype html>

<html lang="en">
<head>
    <meta charset="utf-8">

    <title>Stocktalk - Discussion Sentiment</title>
    <meta name="description" content="Stocktalk">
    <meta name="author" content="Stocktalk">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Fira+Mono:wght@500&family=Fira+Sans&display=swap" rel="stylesheet">

    <style>
        body {            
            font-family: 'Fira Sans', sans-serif;
        }

        .content {
            overflow: hidden;
        }

        canvas {
            max-width: 700px;
        }

        .tickers {
            padding: 0;
        }

        .tickers li {
            display: inline;
            padding: 10px;
        }
    </style>

</head>

<body>
    {{ > sidebar }}
    <div class="content">
        <h2>Daily Discussion</h2>
        <p>Today's top 5 tickers</p>
        <ul class="tickers">
            {{#tickers}}
                <li>
                    <a href="/discussion?ticker={{.}}">{{.}}</a>
                </li>
            {{/tickers}}
        </ul>

        <p>Current pinned posts</p>
        <ul>
            {{#pinnedPosts}}
                <li>
                    <a href="https://reddit.com{{link}}" target="_blank" rel="noopener noreferrer">{{title}}</a>
                </li>
            {{/pinnedPosts}}
        </ul>

        <canvas id="chart" width="200" height="100"></canvas>
        <canvas id="cumulativeChart" width="200" height="100"></canvas>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.min.js"></script>

    <script>
        var ctx = document.getElementById('chart');
        var myChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: {{{labels}}},
                datasets: {{{datasets}}}
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true,
                        }
                    }]
                },
                elements: {
                    point:{
                        radius: 0,
                        hitRadius: 5
                    }
                }
            }
        });
    </script>

    <script>
        var ctx = document.getElementById('cumulativeChart');
        var myChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: {{{labels}}},
                datasets: {{{cumulativeDatasets}}}
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true,
                        }
                    }]
                },
                elements: {
                    point:{
                        radius: 0,
                        hitRadius: 5
                    }
                }
            }
        });
    </script>
</body>
</html>